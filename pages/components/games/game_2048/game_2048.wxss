.message{
    width: 50%;
    height: 40%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -60%);
    background-color:rgb(228, 184, 63);
    border-radius: 10rpx;
    text-align: center;
}
.winner{
    display: flex;
    flex-direction: column;
}
.continue{
    width: 100rpx;
}
