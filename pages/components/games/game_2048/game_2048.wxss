/* pages/components/games/game_2048.wxss */
.br20{
    border-radius: 20rpx;
}

.container{
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    background-color: rgb(245, 244, 205);
    height: 100%;
}
.mask::before{
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(134, 211, 235, 0.5);
}

.score{
    width: 750rpx;
    height: 30%;
    display: flex;
    flex-direction: row;
}
.left{
    width: 50%;
    height: 100%;
}
.right{
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.currentscore{
    width: 320rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    background-color:rgb(100, 114, 67);
    line-height: 60rpx;
    text-align: center;
    border-radius: 10%;
    margin: 10rpx;
}
.bestscore{
    width: 320rpx;
    height: 120rpx;
    text-align: center;
    line-height: 60rpx;
    margin: 0 auto;
    display: inline-block;
    background-color:rgb(100, 114, 67);
    border-radius: 8%;
}
.currentscore,.bestscore:nth-child(1){
    color: #dac68fee;
}
.currentscore,.bestscore:nth-child(2){
    color: #ffffff;
}
.main{
    margin: 0 auto;
    height: 70%;
    justify-content: center;
}
.bigbox{
    padding-top: 10rpx;
    width: 700rpx;
    height: 80%;
    background-color: burlywood;
    display: inline-block;
    justify-content: space-around;
    border-radius: 20rpx;
}
.boxs{
    display: flex;
    justify-content: center;
    text-align: center;
}
.box{
    width: 140rpx;
    height: 140rpx;
    background-color:aquamarine;
    margin: 5px;
    display: inline-block;
    justify-content: center;
    border-radius: 20rpx;
    line-height: 140rpx;
}
.number_null{
    display: none;
}
